package test.servletpac;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.List;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import test.dto.MemberDto;
@WebServlet("/send")
public class LoginServlet extends HttpServlet {
	@Override
	protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String email = req.getParameter("email");
		String password = req.getParameter("password");
				
		List<MemberDto> members = new ArrayList<>();
		members.add(new MemberDto(1,"jjha0125@nate.com","4826ab"));
		members.add(new MemberDto(2,"jjha0125@naver.com","6523ab"));
		members.add(new MemberDto(3,"jjha0125@gmail.com","1352ab"));
		
		//응답 인코딩 설정
		resp.setCharacterEncoding("utf-8");
		//응답 컨텐트 설정
		resp.setContentType("text/html; charset=utf-8");
		//요청을 한 클라이언트에게 문자열을 출력할수 있는 객체의 참조값 얻어내기
		PrintWriter pw = resp.getWriter();
		pw.println("<!doctype html>");
		pw.println("<html>");
		pw.println("<head>");
		pw.println("<meta charset='utf-8'>");
		pw.println("<title></title>");
		pw.println("</head>");
		pw.println("<body>");
		boolean emailFound = false;
		for (MemberDto tmp:members) {
			String EMAIL = tmp.getName();
			String PASSWORD = tmp.getAddr();
			if(email.equals(EMAIL)) {
				emailFound = true;
				EMAIL.
				if(password.equals(PASSWORD)) {
					pw.println("로그인 되었습니다");
					break;
				}else {
					pw.println("비밀번호가 틀렸습니다");
					break;
				}
			}
			if(!emailFound) {
				pw.println("일치하는 이메일이 없습니다.");
			}
		}
		
		
		pw.println("</body>");
		pw.println("</html>");
		pw.close();
		
	}
}
